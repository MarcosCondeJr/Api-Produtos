<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Produto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <div class="container p-1 mt-4">
        <form id="formProduto">
            <h1 class="mt-3 mb-3">Cadastro de Produto</h1>
            <div class="row">
                <div class="col-sm-8 mb-4">
                    <label for="nome" class="form-label required">Nome Produto</label>
                    <input type="text" class="form-control" name="nome" id="nome">
                </div>
                <div class="col-sm-4 mb-4 ">
                    <label for="preco" class="form-label" placeholder="Digite o nome do produto">Pre√ßo do Produto</label>
                    <input type="number" step="0.01" id="preco" class="form-control" name="preco" placeholder="R$">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb-4">
                    <label for="imagem" class="form-label required">Imagem</label>
                    <input type="url" class="form-control" name="imagem" id="imagem">
                </div>
            </div>
            <button type="submit" class="btn btn-success" id="cad-categoria-btn">Cadastrar</button>
        </form>
    </div>

    <script>
        const form = document.getElementById('formProduto')
        form.addEventListener('submit',async (e)=>{
            e.preventDefault()
            const nome = document.getElementById('nome').value;
            const preco = parseFloat(document.getElementById('preco').value);
            const imagem = document.getElementById('imagem').value;

            const res = await fetch('/produtos',{
                method: 'POST',
                headers: {'Content-Type':'application/json'},
                body:JSON.stringify({nome,preco,imagem})
            })

            if(res.ok){
                alert('produto cadastrado com sucesso')
                window.location.reload()
            } else {
                alert("Erro ao cadastrar o produto.")
            }
        })
    </script>
</body>
</html>